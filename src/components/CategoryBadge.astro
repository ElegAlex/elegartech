---
interface Props {
  category: string;
  size?: 'sm' | 'md';
}

const { category, size = 'md' } = Astro.props;

const categorySlug = category
  .toLowerCase()
  .normalize('NFD')
  .replace(/[\u0300-\u036f]/g, '')
  .replace(/\s+/g, '-');

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-2.5 py-1 text-sm',
};
---

<a
  href={`/categories/${categorySlug}`}
  class={`category-badge ${sizeClasses[size]} hover:bg-[var(--accent-primary)]/20 transition-colors`}
>
  {category}
</a>
